<%- include('./partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action="/login" method="POST">

                <div class="form-group">
                    <input  id="nickname" type="text" class="form-control" name="nickname" placeholder="Nickname" <%- (typeof nickname != 'undefined') ? `value='${nickname}'` : '' %> required  maxLength="20" />
                </div>

                <div class="form-group">
                    <input id="password" type="password" class="form-control"  name="password" placeholder="Password" required maxLength="15" /> 
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer'); %>
