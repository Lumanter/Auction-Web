<%- include('./partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action="/params" method="POST">

                <div class="form-group">
                    <h4>Improvement Percent</h4>
                    <input id="improvementpercent" type="number" class="form-control" name="improvementpercent" placeholder="Improvement Percent" <%- (typeof params != 'undefined') ? `value='${params.improvementpercent}'` : '' %> step=".01" required />
                </div>

                <div class="form-group">
                    <h4>₡Minimum Increment</h4>
                    <input id="minincrement" type="number" class="form-control" name="minincrement" placeholder="₡Minimum Increment" <%- (typeof params != 'undefined') ? `value='${params.minincrement}'` : '' %> required />
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Parameters</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer'); %>