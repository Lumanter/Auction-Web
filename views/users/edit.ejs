<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action='/users/<%- id %>' method="POST">

                <div class="form-group">
                    <h5>Id</h5>
                    <input id="id" type="text" class="form-control" name="id" placeholder="Id"  value='<%- id %>' disabled />
                </div>

                <div class="form-group">
                    <h5>Nickname</h5>
                    <input  id="nickname" type="text" class="form-control" name="nickname" placeholder="Nickname"  value='<%- nickname %>' required  maxLength="20" />
                </div>

                <div class="form-group">
                    <input id="isAdmin" type="checkbox" name="isAdmin" <%- (isadmin) ? "checked" : '' %> disabled />
                    isAdmin
                </div>

                <div class="form-group">
                    <h5>Email</h5>
                    <input id="email" type="email" class="form-control" name="email" placeholder="Email" value='<%- email %>' required />
                </div>

                <div class="form-group">
                    <h5>Password</h5>
                    <input id="password" type="password" class="form-control"  name="password" placeholder="Password" required maxLength="15" /> 
                </div>

                <div class="form-group">
                    <h5>First Name</h5>
                    <input id="firstName" type="text" class="form-control" name="firstName" placeholder="First Name" value='<%- firstname %>' required maxLength="50" />
                </div>

                <div class="form-group">
                    <h5>Last Name</h5>
                    <input id="lastName" type="text" class="form-control" name="lastName" placeholder="Last Name"  value='<%- lastname %>' required maxLength="50" />
                </div>

                <div class="form-group">
                    <h5>Phone Number</h5>
                    <input id="phoneNumber" type="text" class="form-control" name="phoneNumber" maxLength="8" placeholder="Phone Number" value='<%- phonenumber %>' />
                </div>

                <div class="form-group">
                    <h5>Home Number</h5>
                    <input id="homeNumber" type="text" class="form-control" name="homeNumber" maxLength="8" placeholder="Home Number" value='<%- homenumber %>' />
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>
