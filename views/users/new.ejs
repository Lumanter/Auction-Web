<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <% const userDefined = (typeof id != 'undefined'); %>  <!-- if user id is defined all user data is available, fill the form -->
            <form action="/users" method="POST">

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Id</span>
                    </div>
                    <input id="id" type="text" class="form-control" name="id" <%- (userDefined && id) ? `value='${id}'` : '' %> required />
                </div>

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Nickname</span>
                    </div>
                    <input id="nickname" type="text" class="form-control" name="nickname" <%- (userDefined) ? `value='${nickname}'` : '' %> required  maxLength="20" />
                </div>

                <div class="form-group">
                    <input id="isAdmin" type="checkbox" name="isAdmin" <%- (userDefined && isAdmin) ? "checked" : '' %> />
                    <label>isAdmin</label>
                </div>

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input id="email" type="email" class="form-control" name="email" <%- (userDefined) ? `value='${email}'` : '' %> required />
                </div>

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input id="password" type="password" class="form-control"  name="password" required maxLength="15" /> 
                </div>

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First Name</span>
                    </div>
                    <input id="firstName" type="text" class="form-control" name="firstName" <%- (userDefined) ? `value='${firstName}'` : '' %> required maxLength="50" />
                </div>

                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Last Name</span>
                    </div>
                    <input id="lastName" type="text" class="form-control" name="lastName"  <%- (userDefined) ? `value='${lastName}'` : '' %> required maxLength="50" />
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Create User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>
