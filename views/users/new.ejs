<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <% const userDefined = (typeof id != 'undefined'); %>  <!-- if user id is defined all user data is available, fill the form -->
            <form action="/register" method="POST">

                <div class="form-group">
                    <input id="id" type="text" class="form-control" name="id" placeholder="Id" <%- (userDefined && id) ? `value='${id}'` : '' %> required />
                </div>

                <div class="form-group">
                    <input  id="nickname" type="text" class="form-control" name="nickname" placeholder="Nickname" <%- (userDefined) ? `value='${nickname}'` : '' %> required  maxLength="20" />
                </div>

                <div class="form-group">
                    <input id="isAdmin" type="checkbox" name="isAdmin" <%- (userDefined && isAdmin) ? "checked" : '' %> />
                    isAdmin
                </div>

                <div class="form-group">
                    <input id="email" type="email" class="form-control" name="email" placeholder="Email" <%- (userDefined) ? `value='${email}'` : '' %> required />
                </div>

                <div class="form-group">
                    <input id="password" type="password" class="form-control"  name="password" placeholder="Password" required maxLength="15" /> 
                </div>

                <div class="form-group">
                    <input id="firstName" type="text" class="form-control" name="firstName" placeholder="First Name" <%- (userDefined) ? `value='${firstName}'` : '' %> required maxLength="50" />
                </div>

                <div class="form-group">
                    <input id="lastName" type="text" class="form-control" name="lastName" placeholder="Last Name"  <%- (userDefined) ? `value='${lastName}'` : '' %> required maxLength="50" />
                </div>

                <div class="form-group">
                    <input id="phoneNumber" type="text" class="form-control" name="phoneNumber" maxLength="8" placeholder="Phone Number" <%- (userDefined) ? `value='${phoneNumber}'` : '' %> />
                </div>

                <div class="form-group">
                    <input id="homeNumber" type="text" class="form-control" name="homeNumber" maxLength="8" placeholder="Home Number" <%- (userDefined) ? `value='${homeNumber}'` : '' %> />
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>
